{
  "compilerOptions": {
    "target": "ES2020",                           // Specify ECMAScript target version (ES6 or later for modern Node.js)
    "module": "commonjs",                         // Node.js uses CommonJS modules
    "rootDir": "./src",                           // Specify the root directory of your TypeScript source files
    "outDir": "./dist",                           // Output directory for compiled files
    "esModuleInterop": true,                      // Enables import/export compatibility between CommonJS and ES6 modules
    "forceConsistentCasingInFileNames": true,     // Ensure consistent casing in module imports
    "strict": true,                               // Enable all strict type-checking options
    "skipLibCheck": true,                         // Skip type-checking of declaration files to improve performance
    "resolveJsonModule": true,                    // Allow importing .json files
    "moduleResolution": "node",                   // Use Node module resolution
    "noImplicitAny": true,                        // Raise error on expressions and declarations with an implied 'any' type
    "noUnusedLocals": true,                       // Report errors on unused local variables
    "noUnusedParameters": true,                   // Report errors on unused function parameters
    "noImplicitReturns": true,                    // Ensure functions return a value for each code path
    "noFallthroughCasesInSwitch": true            // Ensure switch statements have a default case or explicit break
  },
  "include": [
    "./src/**/*.ts"  // Include all TypeScript files in the src directory
  ],
  "exclude": [
    "node_modules",  // Exclude the node_modules folder
    "**/*.spec.ts"   // Exclude test files if you add them later
  ]
}
